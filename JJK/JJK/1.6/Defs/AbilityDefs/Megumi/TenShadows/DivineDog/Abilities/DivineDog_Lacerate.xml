<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <TrainableDef>
    <defName>JJK_DemonDogLacerate</defName>
    <label>leap</label>
    <description>Command your divine dog to leap at the target biting them.</description>
    <listPriority>0</listPriority>
    <difficulty>200</difficulty>
    <steps>1</steps>
    <specialTrainable>true</specialTrainable>
    <enablesAbility>JJK_DivineDog_Lacerate</enablesAbility>
  </TrainableDef>

  <AbilityDef>
    <defName>JJK_DivineDog_Lacerate</defName>
    <label>Lacerate</label>
    <description>Walk up to a target and inflict a grievous bleeding wound with a touch.</description>
    <displayGizmoWhileUndrafted>true</displayGizmoWhileUndrafted>
    <category>Cursed_Innate</category>
    <verbProperties>
      <verbClass>Verb_CastAbilityTouch</verbClass>
      <drawAimPie>true</drawAimPie>
      <warmupTime>0.1</warmupTime>
      <range>10</range>
      <targetParams>
        <canTargetPawns>true</canTargetPawns>
        <canTargetBuildings>false</canTargetBuildings>
        <canTargetLocations>false</canTargetLocations>
      </targetParams>
    </verbProperties>
    <comps>
      <li Class="CompProperties_AbilityGiveHediff">
        <compClass>CompAbilityEffect_GiveHediff</compClass>
        <hediffDef>Bite</hediffDef>
        <severity>1.0</severity>
        <applyToTarget>true</applyToTarget>
        <applyToSelf>false</applyToSelf>
        <replaceExisting>true</replaceExisting>
      </li>
    </comps>
  </AbilityDef>

</Defs>
