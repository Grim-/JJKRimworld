<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThinkTreeDef>
    <defName>JJK_HuntingSummonedCreature</defName>
    <thinkRoot Class="ThinkNode_Priority">
      <subNodes>
        <li Class="ThinkNode_Subtree">
          <treeDef>Downed</treeDef>
        </li>
        <!-- Do a queued job -->
        <li Class="ThinkNode_QueuedJob" />

        <!-- Drafted behavior takes highest priority -->
        <li Class="ThinkNode_ConditionalDrafted">
          <subNodes>
            <li Class="ThinkNode_Tagger">
              <tagToGive>DraftedOrder</tagToGive>
              <subNodes>
                <li Class="JobGiver_MoveToStandable" />
                <li Class="JobGiver_Orders" />
              </subNodes>
            </li>
          </subNodes>
        </li>

        <!-- Combat behavior when master has target -->
        <li Class="JJK.ThinkNode_ConditionalSelfOrMasterHasTarget">
          <subNodes>
            <li Class="JJK.JobGiver_SummonedCreatureFightEnemy" />
          </subNodes>
        </li>

        <!-- Lord-driven hunting jobs -->
        <li Class="ThinkNode_ConditionalHasLordJob">
          <subNodes>
            <li Class="ThinkNode_Tagger">
              <tagToGive>Hunting</tagToGive>
              <subNodes>
                <li Class="JobGiver_Hunt" />
              </subNodes>
            </li>
          </subNodes>
        </li>

        <!-- Regular hunting work -->
        <li Class="ThinkNode_ConditionalCanDoConstantThinkTreeJobNow">
          <subNodes>
            <li Class="ThinkNode_Tagger">
              <tagToGive>Hunting</tagToGive>
              <subNodes>
                <li Class="JobGiver_Hunt" />
              </subNodes>
            </li>
          </subNodes>
        </li>

        <!-- Default summoned behavior when not hunting -->
        <li Class="JJK.ThinkNode_ConditionalNearMaster">
          <MaxDistanceToMaster>5</MaxDistanceToMaster>
          <subNodes>
            <li Class="JobGiver_Idle">
            </li>
          </subNodes>
        </li>
        <li Class="JJK.JobGiver_SummonedCreatureFollowMaster">
        </li>
      </subNodes>
    </thinkRoot>
  </ThinkTreeDef>
</Defs>
