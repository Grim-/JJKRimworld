        <guaranteedTraits>
          <li>Psychopath</li>
          <li>FastLearner</li>
        </guaranteedTraits>
        <randomTraitChance>0</randomTraitChance>
    </li>
    <li Class="JJK.CompProperties_AbilityCECost">
          <cursedEnergyCost>50</cursedEnergyCost>
    </li>
  </comps>
