<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <AbilityDef>
    <defName>JJK_SummonFleeingHares</defName>
    <label>Summon Fleeing Hares</label>
    <description>Summons a demonic canine to attack enemies, it will find the nearest enemy in range from its inital spawn point, attempt to move towards this target and bite them, it has a 30% chance to cause a bleed.</description>
    <verbProperties>
      <verbClass>Verb_CastAbility</verbClass>
      <drawAimPie>true</drawAimPie>
      <range>20</range>
      <warmupTime>0</warmupTime>
      <targetParams>
        <canTargetLocations>true</canTargetLocations>
      </targetParams>
    </verbProperties>
    <comps>
      <li Class="JJK.CompProperties_AbilityFleeingHareSummon">
        <SummonEffecter>JJK_ShadowSummonEffect</SummonEffecter>
        <shikigamiDef>Shikigami_FleeingHares</shikigamiDef>
      </li>
      <li Class="JJK.CompProperties_UseCE">
        <cursedEnergyCost>20</cursedEnergyCost>
        <burnoutStrain>0</burnoutStrain>      
      </li>
    </comps>
  </AbilityDef>
</Defs>
