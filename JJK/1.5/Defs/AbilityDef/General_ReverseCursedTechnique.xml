<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <JJK.AbilityDef_Toggleable>
    <defName>ReversedCurseTechnique</defName>
    <label>Reversed Curse Technique</label>
    <description>Toggle to consume cursed energy in order to heal.</description>
    <iconPath>UI/Icons/Gene_FireArrow</iconPath>
    <cooldownTicksRange>60</cooldownTicksRange>
    <category>Cursed_Energy</category>
    <displayOrder>200</displayOrder>
    <aiCanUse>true</aiCanUse>
    <warmupEffecter>WaterMist</warmupEffecter>
    <emittedFleck>ShockwaveFast</emittedFleck>
    <displayGizmoWhileUndrafted>True</displayGizmoWhileUndrafted>
    <disableGizmoWhileUndrafted>False</disableGizmoWhileUndrafted>
    <verbProperties>
      <verbClass>Verb_CastAbility</verbClass>
      <range>0</range>
      <warmupTime>0</warmupTime>
      <soundCast>FireSpew_Resolve</soundCast>
      <targetable>False</targetable>
    </verbProperties>
    <comps>
      <li Class="JJK.CompProperties_RCT">
        <cursedEnergyCost>0</cursedEnergyCost> <!-- inital cast cost zero -->
        <PartRegenTickCount>100</PartRegenTickCount> <!-- how often it can attempt to regen a part -->
        <CECostPerTick>1</CECostPerTick> <!-- how much it costs per tick while active -->
        <CEPartRegenCost>10</CEPartRegenCost> <!-- how much it costs to restore a lost limb part -->
        <CEHediffCost>4</CEHediffCost><!-- how much it costs to heal a bad hediff -->
        <CanCureAddiction>False</CanCureAddiction> <!-- should addiction be counted? -->
        <ShouldRemoveImplants>False</ShouldRemoveImplants><!-- should it regenerated and remove implants? -->
      </li>
    </comps>
  </JJK.AbilityDef_Toggleable>
</Defs>
