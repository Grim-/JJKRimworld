<?xml version="1.0" encoding="utf-8" ?>
<Defs>
<!-- HediffDef for the Cursed Slumber -->
<HediffDef>
  <defName>JJK_CursedSlumber</defName>
  <label>cursed slumber</label>
  <description>In a deep, unnatural coma induced by the Cursed Slumber Stone.</description>
  <hediffClass>HediffWithComps</hediffClass>
  <defaultLabelColor>(0.5, 0, 0.5)</defaultLabelColor>
  <maxSeverity>1.0</maxSeverity>
  <isBad>false</isBad>
  <comps>
    <li Class="JJK.HediffCompProperties_RandomDisappear">
      <minDurationTicks>1800</minDurationTicks>
      <maxDurationTicks>6000</maxDurationTicks>
    </li>
    <li Class="JJK.HediffCompProperties_AddGeneOnRemoved">
      <GeneDefName>Gene_JJKCursedEnergy</GeneDefName>
    </li>
    <li Class="JJK.HediffCompProperties_GiveRandomGene">
    <Genes>
      <li>Gene_JJKHeavenlyPact</li>
      <li>Gene_JJKInumaki</li>
      <li>Gene_JJKLimitless</li>
      <li>Gene_JJKMahito</li>
      <li>Gene_JJKSixEyes</li>
      <li>Gene_JJKSukuna</li>
      <li>Gene_Kenjaku</li>
      <li>Gene_Shoko</li>
    </Genes>
    </li>
  </comps>
  <renderNodeProperties>
  <li Class="JJK.PawnOverlayNodeProperties">
    <texPath>Animations/Moon1</texPath>
    <graphicData>
      <texPath>Things/Pawn/Animal/Warg/Warg</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>1.5</drawSize>
    </graphicData>
    <overlayColor>(0, 0, 1)</overlayColor>
    <overlayAlpha>0.3</overlayAlpha>
    <overlayLayer>Body</overlayLayer>
    <offset>(0, 1, 0)</offset>
    <layerOffset>10</layerOffset>
    <workerClass>JJK.PawnOverlayNodeWorker</workerClass>
    <shaderTypeDef>CutoutComplex</shaderTypeDef>
  </li>
  </renderNodeProperties>
  <stages>
  </stages>
</HediffDef>
</Defs>
