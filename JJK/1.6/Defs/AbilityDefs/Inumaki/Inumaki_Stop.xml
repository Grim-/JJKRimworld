<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <AbilityDef ParentName="InumakiCursedSpeechBase">
    <defName>InumakiCursedSpeech_Stop</defName>
    <label>Cursed Speech: Stop</label>
    <description>Command a target to stop moving. This effect scales depending on the cursed energy of the caster and the target, pawns without cursed energy always take the full force of the effect.</description>
    <category>Cursed_Energy</category>
    <comps>
      <li Class="JJK.CompProperties_CursedSpeechEffect">
        <compClass>JJK.CompCursedSpeechEffect</compClass>
        <hediffToApply>JJK_CursedSpeech_Stop</hediffToApply>
        <minDurationTicks>0</minDurationTicks>
        <maxDurationTicks>30000</maxDurationTicks>
        <baseEffectStrength>1</baseEffectStrength>
        <scaleSeverity>True</scaleSeverity>
      </li>
      <li Class="JJK.CompProperties_UseCE">
        <cursedEnergyCost>25</cursedEnergyCost>
      </li>
    </comps>
  </AbilityDef>

</Defs>
