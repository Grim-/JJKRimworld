<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <HediffDef>
    <defName>JJK_InfiniteDomainComa</defName>
    <label>Coma (Infinity)</label>
    <labelNoun>Coma (Infinity)</labelNoun>
    <hediffClass>HediffWithComps</hediffClass>
    <description>This pawn is currently in a coma due to the effects of Domain Expansion : Infinite Void</description>
    <comps>
    <li Class="HediffCompProperties_Disappears">
      <disappearsAfterTicks>
        <min>5000</min>
        <max>10000</max>
      </disappearsAfterTicks>
    </li>
    <li Class="HediffCompProperties_SeverityPerDay">
      <severityPerDay>-1</severityPerDay>
    </li>
  </comps>
  <stages>
    <li>
      <minSeverity>0</minSeverity>
      <label>initial</label>
      <capMods>
        <li>
          <capacity>Consciousness</capacity>
          <setMax>0.7</setMax>
        </li>
      </capMods>
    </li>
    <li>
      <minSeverity>0.5</minSeverity>
      <label>advanced</label>
      <capMods>
        <li>
          <capacity>Consciousness</capacity>
          <setMax>0.4</setMax>
        </li>
      </capMods>
    </li>
    <li>
      <minSeverity>0.7</minSeverity>
      <label>extreme</label>
      <capMods>
        <li>
          <capacity>Consciousness</capacity>
          <setMax>0.1</setMax>
        </li>
      </capMods>
    </li>
  </stages>
  </HediffDef>
</Defs>
